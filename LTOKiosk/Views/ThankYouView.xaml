<UserControl x:Class="LTOKiosk.Views.ThankYouView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LTOKiosk.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="MidnightBlue">
        <Grid.RowDefinitions>
            <RowDefinition>
            </RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Margin="125,0,0,0" FontWeight="Bold" Foreground="White" FontSize="24">Transaction Complete!</TextBlock>

            <TextBlock  Margin="0,10,0,0" Foreground="White" FontSize="24">Please take your receipt and use it to claim your</TextBlock>

            <TextBlock Margin="200,0,0,0" Foreground="White" FontSize="24">sticker</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
